@model IEnumerable<ECommerce_Dashboard.Models.UserData>

<p>
    <a onclick="createUser()" class="btn btn-success">+Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <a onclick="EditUser('@item.ID')" class="btn btn-primary">Edit</a> |
                    <a onclick="getUserDetails('@item.ID')" class="btn btn-primary">Details</a> |
                    <a onclick="DeleteUser('@item.ID')" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

